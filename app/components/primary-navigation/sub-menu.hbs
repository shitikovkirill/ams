<li class="menu-item">
    <a class="menu-link disabled-link" href="#">
        <div>{{ t 'menu.projects' }}
            {{#if this.device.isDesktop}}
                <i class="icon-angle-down"></i>
            {{else}}
                {{#if this.open}}
                    <button
                     class="sub-menu-trigger icon-chevron-right icon-rotate-90"
                     type="button"
                     {{on "click" this.toggleMenu}}
                    ></button>
                {{else}}
                    <button
                     class="sub-menu-trigger icon-chevron-right"
                     {{on "click" this.toggleMenu}}
                    ></button>
                {{/if}}
            {{/if}}
        </div>
    </a>    
    <ul class="sub-menu-container" style={{if this.open  "" "display: none;"}}>
        {{#each @items as |item|}}
            <li class="menu-item">
                <LinkTo class="menu-link" @route="portfolio" @model={{item.id}}>
                    <div>{{item.name}}</div>
                </LinkTo>
            </li>
        {{/each}}
    </ul>
</li>